                        <HeaderStyle BackColor="#990000" Font-Bold="True" ForeColor="White" />
                        <AlternatingRowStyle BackColor="White" />
                    </asp:DetailsView>
                    <asp:SqlDataSource ID="dsSqlGetDomainGroups" runat="server" 
                        ConnectionString="<%$ ConnectionStrings:iTecon %>" 
                        SelectCommand="SELECT [GroupId], 'Group ' + GroupShortName  + ': ' + [GroupName] AS GroupDetails FROM [HR_AppraisalDomainGroup] ORDER BY GroupDetails">
                    </asp:SqlDataSource>
                    <asp:SqlDataSource ID="dsSqlGetAppraisalDepartments" runat="server" ConnectionString="<%$ ConnectionStrings:iTecon %>" 
    
