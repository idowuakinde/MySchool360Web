                            <asp:Parameter Name="DomainId" Type="Int32" />
                            <asp:Parameter Name="DomainGroupId" Type="Int32" />
                            <asp:Parameter Name="DomainTitle" Type="String" />
                            <asp:Parameter Name="AppraisalDepartment" Type="String" />
                            <asp:Parameter Name="DomainResponseOption1" Type="String" />
                            <asp:Parameter Name="DomainResponseOption2" Type="String" />
                            <asp:Parameter Name="DomainResponseOption3" Type="String" />
                            <asp:Parameter Name="DomainResponseOption4" Type="String" />
                            <asp:Parameter Name="DomainResponseOption5" Type="String" />
                            <asp:Parameter Name="Remark" Type="String" />
                            <asp:Parameter Name="Remark2" Type="String" />
                            <asp:Parameter Name="Remark3" Type="String" />
