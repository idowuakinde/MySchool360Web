                                <ItemStyle Width="120px" />
                            </asp:TemplateField>
                            <asp:TemplateField HeaderText="Option 4" SortExpression="DomainResponseOption4">
                                <EditItemTemplate>
                                    <asp:TextBox ID="TextBox7" runat="server" 
                                        Text='<%# Bind("DomainResponseOption4") %>' 
