                                        DataTextField="AppraisalDepartmentName" 
                                        DataValueField="AppraisalDepartmentName" 
                                        SelectedValue='<%# Bind("AppraisalDepartment") %>'>
                                    </asp:DropDownList>
                                </EditItemTemplate>
                                <ItemTemplate>
                                    <asp:Label ID="Label3" runat="server" Text='<%# Bind("AppraisalDepartment") %>'></asp:Label>
                                </ItemTemplate>
                                <ItemStyle Width="150px" />
                            </asp:TemplateField>
                            <asp:TemplateField HeaderText="Domain Group (Alias)" SortExpression="GroupName">
                                <EditItemTemplate>
                                    <asp:DropDownList ID="ddlAppraisalGroup_Edit" runat="server" 
