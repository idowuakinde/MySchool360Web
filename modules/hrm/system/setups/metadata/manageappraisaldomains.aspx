                            <asp:BoundField DataField="DomainId" HeaderText="DomainId" 
                                InsertVisible="False" ReadOnly="True"
                                SortExpression="DomainId" />
                            <asp:TemplateField HeaderText="Appraisal Department:" 
                                SortExpression="AppraisalDepartment">
                                <InsertItemTemplate>
                                    <asp:DropDownList ID="ddlAppraisalDepartment_Add" runat="server" 
                                        CssClass="defaultFormElementStyle" DataSourceID="dsSqlGetAppraisalDepartments" 
                                        DataTextField="AppraisalDepartmentName" 
                                        DataValueField="AppraisalDepartmentName" 
                                        SelectedValue='<%# Bind("AppraisalDepartment") %>'>
                                    </asp:DropDownList>
                                </InsertItemTemplate>
                                <ItemTemplate>
                                    <asp:Label ID="Label3" runat="server" Text='<%# Bind("AppraisalDepartment") %>'></asp:Label>
                                </ItemTemplate>
                            </asp:TemplateField>
                            <asp:TemplateField HeaderText="Domain Group:" SortExpression="DomainGroupId">
                                <InsertItemTemplate>
                                    <asp:DropDownList ID="ddlDomainGroup_Add" runat="server" 
                                        CssClass="defaultFormElementStyle" DataSourceID="dsSqlGetDomainGroups" 
                                        DataTextField="GroupDetails" DataValueField="GroupId" 
                                        SelectedValue='<%# Bind("DomainGroupId") %>'>
                                    </asp:DropDownList>
                                </InsertItemTemplate>
                                <ItemTemplate>
                                    <asp:Label ID="Label1" runat="server" Text='<%# Bind("DomainGroupId") %>'></asp:Label>
                                </ItemTemplate>
                            </asp:TemplateField>
                            <asp:TemplateField HeaderText="Domain Title:" SortExpression="DomainTitle">
                                <InsertItemTemplate>
                                    <asp:TextBox ID="txtDomainTitle_Add" runat="server" 
                                        Text='<%# Bind("DomainTitle") %>' Columns="50" 
                                        CssClass="defaultFormElementStyle" Rows="2" TextMode="MultiLine"></asp:TextBox>
                                </InsertItemTemplate>
                                <ItemTemplate>
                                    <asp:Label ID="Label2" runat="server" Text='<%# Bind("DomainTitle") %>'></asp:Label>
                                </ItemTemplate>
                            </asp:TemplateField>
                            <asp:TemplateField HeaderText="Domain Response Option 1:" 
                                SortExpression="DomainResponseOption1">
                                <InsertItemTemplate>
                                    <asp:TextBox ID="txtOption1_Add" runat="server" 
                                        Text='<%# Bind("DomainResponseOption1") %>' Columns="50" 
                                        CssClass="defaultFormElementStyle" Rows="3" TextMode="MultiLine"></asp:TextBox>
                                </InsertItemTemplate>
                                <ItemTemplate>
                                    <asp:Label ID="Label4" runat="server" 
                                        Text='<%# Bind("DomainResponseOption1") %>'></asp:Label>
                                </ItemTemplate>
                            </asp:TemplateField>
                            <asp:TemplateField HeaderText="Domain Response Option 2:" 
                                SortExpression="DomainResponseOption2">
                                <InsertItemTemplate>
                                    <asp:TextBox ID="txtOption2_Add" runat="server" Columns="50" 
                                        CssClass="defaultFormElementStyle" Rows="3" 
                                        Text='<%# Bind("DomainResponseOption2") %>' TextMode="MultiLine"></asp:TextBox>
                                </InsertItemTemplate>
                                <ItemTemplate>
                                    <asp:Label ID="Label5" runat="server" 
                                        Text='<%# Bind("DomainResponseOption2") %>'></asp:Label>
                                </ItemTemplate>
                            </asp:TemplateField>
                            <asp:TemplateField HeaderText="Domain Response Option 3:" 
                                SortExpression="DomainResponseOption3">
                                <InsertItemTemplate>
                                    <asp:TextBox ID="txtOption3_Add" runat="server" Columns="50" 
                                        CssClass="defaultFormElementStyle" Rows="3" 
                                        Text='<%# Bind("DomainResponseOption3") %>' TextMode="MultiLine"></asp:TextBox>
                                </InsertItemTemplate>
                                <ItemTemplate>
                                    <asp:Label ID="Label6" runat="server" 
                                        Text='<%# Bind("DomainResponseOption3") %>'></asp:Label>
                                </ItemTemplate>
                            </asp:TemplateField>
                            <asp:TemplateField HeaderText="Domain Response Option 4:" 
                                SortExpression="DomainResponseOption4">
                                <InsertItemTemplate>
                                    <asp:TextBox ID="txtOption4_Add" runat="server" Columns="50" 
                                        CssClass="defaultFormElementStyle" Rows="3" 
                                        Text='<%# Bind("DomainResponseOption4") %>' TextMode="MultiLine"></asp:TextBox>
                                </InsertItemTemplate>
                                <ItemTemplate>
                                    <asp:Label ID="Label7" runat="server" 
                                        Text='<%# Bind("DomainResponseOption4") %>'></asp:Label>
                                </ItemTemplate>
                            </asp:TemplateField>
                            <asp:TemplateField HeaderText="Domain Response Option 5:" 
                                SortExpression="DomainResponseOption5">
                                <InsertItemTemplate>
                                    <asp:TextBox ID="txtOption5_Add" runat="server" 
                                        Text='<%# Bind("DomainResponseOption5") %>' Columns="50" 
                                        CssClass="defaultFormElementStyle" Rows="3" TextMode="MultiLine"></asp:TextBox>
                                </InsertItemTemplate>
                                <ItemTemplate>
                                    <asp:Label ID="Label8" runat="server" 
                                        Text='<%# Bind("DomainResponseOption5") %>'></asp:Label>
                                </ItemTemplate>
