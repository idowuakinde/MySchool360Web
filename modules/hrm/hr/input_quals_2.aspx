                            <asp:Parameter Name="StaffCertificateId" Type="Int32" />
                        </DeleteParameters>
                        <UpdateParameters>
                            <asp:Parameter Name="StaffCertificateId" Type="Int32" />
                            <asp:Parameter Name="StaffId" Type="Int32" />
                            <asp:Parameter Name="CertificateCodeId" Type="Int32" />
                            <asp:Parameter Name="CertificateTypeId" Type="Int32" />
                            <asp:Parameter Name="DisciplineId" Type="Int32" />
                            <asp:Parameter Name="YearObtained" Type="Int32" />
                            <asp:Parameter Name="IsEntryQual" Type="String" />
                            <asp:Parameter Name="Remark" Type="String" />
                        </UpdateParameters>
                        <InsertParameters>
                            <asp:Parameter Direction="InputOutput" Name="StaffCertificateId" Type="Int32" />
                            <asp:Parameter Name="StaffId" Type="Int32" />
                            <asp:Parameter Name="CertificateCodeId" Type="Int32" />
                            <asp:Parameter Name="CertificateTypeId" Type="Int32" />
                            <asp:Parameter Name="DisciplineId" Type="Int32" />
                            <asp:Parameter Name="YearObtained" Type="Int32" />
                            <asp:Parameter Name="IsEntryQual" Type="String" />
                            <asp:Parameter Name="Remark" Type="String" />
