                                    <ItemTemplate>
                                        <asp:Label ID="Label10" runat="server" Text='<%# Bind("CertificateCodeId") %>'></asp:Label>
                                    </ItemTemplate>
                                </asp:TemplateField>
                                <asp:TemplateField HeaderText="Discipline:" SortExpression="DisciplineId">
                                    <EditItemTemplate>
                                        <asp:TextBox ID="TextBox4" runat="server" Text='<%# Bind("DisciplineId") %>'></asp:TextBox>
                                    </EditItemTemplate>
