                                            ConnectionString="<%$ ConnectionStrings:iTecon %>" 
                                            SelectCommand="SELECT [CertificateCodeId], [CertificateCodeName] + ' (' + [FullName] + ')' AS FullName FROM [HR_CertificateCode]">
                                        </asp:SqlDataSource>
